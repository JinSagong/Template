<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BottomSlideView">
        <attr name="bottomSlideBackground" format="reference" />
        <attr name="bottomSlideBar" format="reference" />
        <attr name="bottomSlideBarHeight" format="dimension" />
        <attr name="bottomSlideMaxHeight" format="dimension" />
        <attr name="bottomSlideMinHeight" format="dimension" />
        <attr name="bottomSlideAutoComplete" format="boolean" />
        <attr name="bottomSlideDraggable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TopSlideView">
        <attr name="topSlideBackground" format="reference" />
        <attr name="topSlideBar" format="reference" />
        <attr name="topSlideBarHeight" format="dimension" />
        <attr name="topSlideMaxHeight" format="dimension" />
        <attr name="topSlideMinHeight" format="dimension" />
        <attr name="topSlideAutoComplete" format="boolean" />
        <attr name="topSlideDraggable" format="boolean" />
    </declare-styleable>

    <!-- Dots Indicator -->
    <attr format="color" name="dotsColor"/>
    <attr format="color" name="selectedDotColor"/>
    <attr format="color" name="dotsStrokeColor"/>
    <attr format="dimension" name="dotsSize"/>
    <attr format="float" name="dotsWidthFactor"/>
    <attr format="dimension" name="dotsSpacing"/>
    <attr format="dimension" name="dotsCornerRadius"/>
    <attr format="dimension" name="dotsStrokeWidth"/>
    <attr format="float" name="stiffness"/>
    <attr format="float" name="dampingRatio"/>
    <attr format="boolean" name="progressMode"/>

    <declare-styleable name="DotsIndicator">
        <attr name="dotsColor"/>
        <attr name="selectedDotColor"/>
        <attr name="dotsSize"/>
        <attr name="dotsWidthFactor"/>
        <attr name="dotsSpacing"/>
        <attr name="dotsCornerRadius"/>
        <attr name="progressMode"/>
    </declare-styleable>

    <declare-styleable name="SpringDotsIndicator">
        <attr name="dotsColor"/>
        <attr name="dotsSize"/>
        <attr name="dotsSpacing"/>
        <attr name="dotsCornerRadius"/>
        <attr name="dotsStrokeWidth"/>
        <attr name="dotsStrokeColor"/>
        <attr name="stiffness"/>
        <attr name="dampingRatio"/>
    </declare-styleable>

    <declare-styleable name="WormDotsIndicator">
        <attr name="dotsColor"/>
        <attr name="dotsSize"/>
        <attr name="dotsSpacing"/>
        <attr name="dotsCornerRadius"/>
        <attr name="dotsStrokeWidth"/>
        <attr name="dotsStrokeColor"/>
    </declare-styleable>

</resources>